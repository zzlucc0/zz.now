# Database
POSTGRES_USER="<POSTGRES_USER>"
POSTGRES_PASSWORD="<POSTGRES_PASSWORD>"
POSTGRES_DB="personal_platform"
DATABASE_URL="postgresql://<POSTGRES_USER>:<POSTGRES_PASSWORD>@localhost:5432/personal_platform"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="<GENERATE_WITH_openssl_rand_-base64_32>"

# Admin Users (comma-separated emails that will get ADMIN role)
ADMIN_EMAILS="<ADMIN_EMAILS_COMMA_SEPARATED>"

# Admin bootstrap credentials (local-only, do not commit real values)
ADMIN_BOOTSTRAP_USERNAME="<ADMIN_BOOTSTRAP_USERNAME>"
ADMIN_BOOTSTRAP_EMAIL="<ADMIN_BOOTSTRAP_EMAIL>"
ADMIN_BOOTSTRAP_PASSWORD="<ADMIN_BOOTSTRAP_PASSWORD>"
# Optional: override display name (defaults to username)
ADMIN_BOOTSTRAP_DISPLAY_NAME=""

# MinIO S3 Storage
MINIO_ENDPOINT="localhost"
MINIO_PORT="9000"
MINIO_ROOT_USER="<MINIO_ROOT_USER>"
MINIO_ROOT_PASSWORD="<MINIO_ROOT_PASSWORD>"
MINIO_ACCESS_KEY="<MINIO_ACCESS_KEY>"
MINIO_SECRET_KEY="<MINIO_SECRET_KEY>"
MINIO_BUCKET="personal-platform"
MINIO_USE_SSL="false"

# Public URLs
APP_BASE_URL="http://localhost:3000"
PUBLIC_MEDIA_BASE_URL="http://localhost:3000/api/media"

# App Configuration
NODE_ENV="development"

# Seed passwords (optional)
SEED_ADMIN_PASSWORD="<SEED_ADMIN_PASSWORD>"
SEED_SAMPLE_PASSWORD="<SEED_SAMPLE_PASSWORD>"

# Test credentials (required for automated tests)
TEST_USER_PASSWORD="<TEST_USER_PASSWORD>"
TEST_ADMIN_PASSWORD="<TEST_ADMIN_PASSWORD>"
